
<%=  simple_form_for @material do |f| %>
  <%= f.input :name, :input_html => { :class => "input-xxlarge"} %>
  <%= f.input :mtype_id, :collection => @mtype, :label_method => :name, :value_method => :id,:label => "Material Type", :input_html => { :class => "input-xxlarge"} %>
  <div class="form-actions">
    <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary"%>
  </div>
<% end %>
