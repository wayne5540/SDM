

<div class="centered">
  <div class="row">
    <h2>請先登入 (Sign In)</h2><br>
    <p><%= link_to "使用Facebook登入（建議）", user_omniauth_authorize_path(:facebook), :class => "btn btn-lg btn-success" %></p>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :required => true, :label => false, :autofocus => true, input_html: { class: 'form-control' ,placeholder: 'Email' }  %>
        <%= f.input :password, :required => true, :label => false, input_html: { class: 'form-control' ,placeholder: 'Password' } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
      <%= f.input :remember_me, :label => false,:input_html => { class: 'sr-only', :checked => true },:as => :boolean if devise_mapping.rememberable? %>
      <% end %>
    </div>
  </div>
<%= render "devise/shared/links" %>
</div>



