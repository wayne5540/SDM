<h1>飲料調配大師</h1>

<%= render :partial => "materials" %>

<%=  simple_form_for @drink do |f| %>
  <%= f.input :name, :input_html => { :class => "input-xxlarge"} %>
  <%= f.input :way, :input_html => { :class => "input-xxlarge"} %>
  <%= f.input :description, :input_html => { :class => "input-xxlarge"} %>
  <%= f.association :materials, :as => :check_boxes %>
  <div class="form-actions">
    <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary"%>
  </div>
<% end %>



